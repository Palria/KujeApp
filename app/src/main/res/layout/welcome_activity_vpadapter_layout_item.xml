<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10pt"
    android:paddingVertical="10pt"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_store_mall_directory_24"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="10pt"
        android:textAlignment="center"
        android:layout_marginTop="15pt"
        android:text="Unlimited Property Access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/body"
        android:textSize="7pt"
        android:textAlignment="center"
        android:layout_marginTop="15pt"
        android:text="You can order for infinite numbers of our and we deliver."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>