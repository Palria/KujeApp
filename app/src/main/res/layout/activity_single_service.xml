<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleServiceActivity">
    <LinearLayout
        android:id="@+id/titleId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/secondary_app_color"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageButton
                android:id="@+id/backButton"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="1pt"
                android:background="@drawable/baseline_arrow_back_24"
                android:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                />
            
            
            <TextView
                android:id="@+id/serviceTitleTextViewId"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="1pt"
                android:text="Land Agency"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintTop_toTopOf="parent"
                />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/backButton"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:id="@+id/newRequestTextViewId"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5pt"
                android:text="20 new requests"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/totalRequestTextViewId"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5pt"
                android:text="25 total requests"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleId"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <TextView
        android:id="@+id/serviceDescriptionTextViewId"
        android:layout_marginLeft="5pt"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5pt"
        android:text="We are Land Agents, come and buy your land"
        android:ellipsize="end"
        android:textColor="@color/light_dark"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="6pt"
                android:layout_marginHorizontal="5pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:id="@+id/tabLayoutId"
                    android:background="@color/white"
                    app:tabInlineLabel="false"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    app:tabIndicatorColor="@color/secondary_app_color"
                    app:tabSelectedTextColor="@color/secondary_app_color"
                    app:tabIndicatorFullWidth="true"
                    app:tabTextAppearance="@style/TextAppearance.AppCompat.Small">
        
        
                </com.google.android.material.tabs.TabLayout>
            </androidx.cardview.widget.CardView>
    
            <FrameLayout
        android:id="@+id/requestFrameLayoutId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        />
    <FrameLayout
        android:id="@+id/catalogFrameLayoutId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    
    
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/addNewCatalogActionButtonId"
        android:text="Add"
        app:icon="@drawable/ic_outline_camera_alt_24"
        android:textColor="@color/white"
        android:layout_marginHorizontal="12pt"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/secondary_app_color"
        android:layout_gravity="end|bottom"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/declineAdvertButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Decline"
            app:cornerRadius="5dp"
            android:layout_margin="5dp"
            android:visibility="gone"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/approveAdvertButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Approve advert"
            app:cornerRadius="5dp"
            android:layout_margin="5dp"
            android:visibility="gone"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/boostButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Boost page"
            app:cornerRadius="5dp"
            android:layout_margin="5dp"
            android:visibility="gone"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/requestServiceButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Request service or goods"
            app:cornerRadius="5dp"
            android:layout_margin="5dp"
            android:visibility="gone"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>