<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ripple_background"
    android:padding="1dp"
    android:backgroundTint="@color/gray"
    >
    
    <LinearLayout
        android:id="@+id/productLinearLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/catalogTitleTextViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="20sp"
            android:text="For Cake Bakery"
            android:maxLines="3"
            />
    
        <ImageView
            android:id="@+id/catalogCoverPhotoImageViewId"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            />
        
        <TextView
            android:id="@+id/dateAddedTextViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed-medium"
            android:drawableStart="@drawable/ic_baseline_access_time_24"
            android:drawableTint="@color/white"
            android:textSize="9sp"
            android:text="moments ago"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/catalogDescriptionTextViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:text="..."
            android:maxLines="15"
            android:ellipsize="end"
            />
    
    </LinearLayout>
    
    <ImageButton
        android:id="@+id/removeCatalogCoverPhotoImageButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_outline_cancel_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/red_dark"
        android:backgroundTint="@color/transparent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>