<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/sNumberId"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:minHeight="24dp"
        android:gravity="center_horizontal"
        android:text="S/N"
        android:textColor="@color/black"
        />
    
<EditText
    android:id="@+id/cellEditText_1Id"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:minHeight="24dp"
    android:gravity="start|top"
    android:background="@color/white"
    android:layout_margin="2dp"
    android:hint="   ?   "
    android:maxLines="3"
    android:textSize="11sp"
    android:textColor="@color/black"
    />
<EditText
    android:id="@+id/cellEditText_2Id"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:minHeight="24dp"
    android:inputType="number"
    android:gravity="start|top"
    android:hint="   ?   "
    android:background="@color/white"
    android:layout_margin="2dp"
    android:maxLines="3"
    android:textSize="11sp"
    android:textColor="@color/black"
    />
<EditText
    android:id="@+id/cellEditText_3Id"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:minHeight="24dp"
    android:inputType="number"
    android:gravity="start|top"
    android:hint="   ?   "
    android:background="@color/white"
    android:layout_margin="2dp"
    android:maxLines="3"
    android:textSize="11sp"
    android:textColor="@color/black"
    />
<EditText
    android:id="@+id/cellEditText_4Id"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:minHeight="24dp"
    android:inputType="number"
    android:gravity="start|top"
    android:hint="   ?   "
    android:background="@color/white"
    android:layout_margin="2dp"
    android:maxLines="3"
    android:textSize="11sp"
    android:textColor="@color/black"
    />
<EditText
    android:id="@+id/cellEditText_5Id"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:minHeight="24dp"
    android:gravity="start|top"
    android:hint="   ?   "
    android:background="@color/white"
    android:layout_margin="2dp"
    android:maxLines="3"
    android:textSize="11sp"
    android:textColor="@color/black"
    />
<EditText
    android:id="@+id/cellEditText_6Id"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:minHeight="24dp"
    android:hint="   ?   "
    android:background="@color/white"
    android:layout_margin="2dp"
    android:textSize="11sp"
    android:textColor="@color/black"
    android:maxLines="1"
    android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
    android:focusable="false"
    android:inputType="none"
    />
    <LinearLayout
        android:id="@+id/actionAddLinearLayoutId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <ImageButton
            android:background="@drawable/ic_baseline_add_box_24"
            android:backgroundTint="@color/secondary_app_color"
            android:id="@+id/addRowImageButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            />
        
        <ImageButton
            android:background="@drawable/ic_baseline_remove_24"
            android:backgroundTint="@color/red_dark"
            android:id="@+id/removeRowImageButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            />
    
    </LinearLayout>

</LinearLayout>